{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "plugins": [{
      "name": "typescript-tslint-plugin",
      "suppressWhileTypeErrorsPresent": true
    }]
  }
}
